FROM node:18

RUN curl -fsSL -o /usr/local/bin/dbmate https://github.com/amacneil/dbmate/releases/latest/download/dbmate-linux-amd64
RUN chmod +x /usr/local/bin/dbmate

WORKDIR /usr/src/app

COPY typing/node/package*.json ./typing/node/
COPY framework/node ./framework/node

#RUN npm install
RUN npm ci --only=production

COPY typing/node/app ./typing/node/app/
COPY typing/node/app/config/config-production.js ./typing/node/app/config/config.js
COPY tying/db ./typing/db/

WORKDIR /usr/src/app/typing/node
CMD [ "npm", "run", "start:prod" ]
